<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/fmessageName" android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:maxLines="1"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/fmessage"
                    app:layout_constraintStart_toStartOf="parent"
                    android:gravity="left"
                    android:maxWidth="180dp"
                    android:background="@drawable/theme_chatroom_bubble_you_01_image"
                    android:layout_marginStart="32dp" app:layout_constraintTop_toBottomOf="@+id/fmessageName"
                    android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/common_google_signin_btn_text_light_focused"
                    android:paddingStart="16dp" android:paddingEnd="16dp" android:text="하이요"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/ftime"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-thin"
                    app:layout_constraintStart_toEndOf="@+id/fmessage"
                    app:layout_constraintBottom_toBottomOf="@+id/fmessage"
                    android:layout_marginStart="8dp" android:layout_marginBottom="4dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/message"
                    android:background="@drawable/theme_chatroom_bubble_me_01_image"
                    android:maxWidth="180dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="8dp"
                    android:gravity="left" android:layout_marginBottom="8dp"
                    android:textColor="@color/common_google_signin_btn_text_light_focused" android:textSize="14sp"
                    android:paddingStart="12dp" android:paddingEnd="16dp" android:paddingTop="8dp" android:text="ㅇㅋ요~ㅎㅎ"
            />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/time"
                    app:layout_constraintEnd_toStartOf="@+id/message"
                    android:layout_marginEnd="8dp"
                    android:textSize="10sp" app:layout_constraintBottom_toBottomOf="@+id/message"
                    android:layout_marginBottom="4dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>